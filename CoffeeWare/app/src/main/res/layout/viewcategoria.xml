<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginHorizontal="15dp"
    android:layout_marginVertical="20dp">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/boton_redondo_blanco"
        android:layout_marginVertical="20dp">
        <TableRow>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/deepGrey"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="monospace"
                    android:textSize="15dp"
                    android:textAlignment="textEnd"
                    android:gravity="start"
                    android:text="Categoria: "
                    android:paddingRight="10dp"
                    android:layout_weight="1"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/deepGrey"
                    android:fontFamily="monospace"
                    android:textSize="15dp"
                    android:id="@+id/textview_nombrecategoria"
                    android:text="Alimentos"
                    android:layout_weight="1"/>

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_edit_black"
                    android:layout_marginHorizontal="5dp"
                    android:layout_gravity="end"
                    android:background="@android:color/transparent"
                    android:onClick="editarCategoria"
                    android:id="@+id/btn_editarCategoria"
                    android:layout_marginRight="10dp"/>

        </TableRow>

        <TableRow>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/deepGrey"
                android:layout_marginLeft="10dp"
                android:fontFamily="monospace"
                android:textSize="15dp"
                android:textAlignment="textEnd"
                android:paddingRight="10dp"
                android:gravity="start"
                android:text="ID: "
                android:layout_weight="1"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/deepGrey"
                android:fontFamily="monospace"
                android:textSize="15dp"
                android:id="@+id/textview_categoriaid"
                android:text="1"
                android:layout_weight="1"/>

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_delete_black"
                android:layout_marginHorizontal="5dp"
                android:layout_gravity="end"
                android:background="@android:color/transparent"
                android:onClick="eliminarCategoria"
                android:id="@+id/btn_eliminarCategoria"
                android:layout_marginRight="10dp"/>

        </TableRow>

    </TableLayout>

</LinearLayout>