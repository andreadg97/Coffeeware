<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginVertical="15dp"
    android:background="@drawable/boton_redondo_blanco"
    android:padding="10dp"
    android:layout_marginHorizontal="15dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="70">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:textColor="@color/deepGrey"
                android:layout_gravity="start"
                android:fontFamily="monospace"
                android:text="ID:" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="monospace"
                android:layout_gravity="start"
                android:textSize="18dp"
                android:layout_marginRight="5dp"
                android:textColor="@color/deepGrey"
                android:text="123"
                android:maxLength="15"
                android:id="@+id/textview_idOrden" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:textColor="@color/deepGrey"
                android:layout_gravity="start"
                android:fontFamily="monospace"
                android:text="Estado:" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="monospace"
                android:layout_gravity="start"
                android:textSize="18dp"
                android:layout_marginRight="5dp"
                android:textColor="@color/deepGrey"
                android:text="En cola"
                android:maxLength="15"
                android:id="@+id/textview_estadoOrden" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:textColor="@color/deepGrey"
                android:layout_gravity="start"
                android:fontFamily="monospace"
                android:text="Orden de:" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="monospace"
                android:layout_gravity="start"
                android:textSize="18dp"
                android:layout_marginRight="5dp"
                android:textColor="@color/deepGrey"
                android:text="Nombre"
                android:maxLength="15"
                android:id="@+id/textview_nombreCliente" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:textColor="@color/deepGrey"
                android:layout_gravity="start"
                android:fontFamily="monospace"
                android:text="A pagar: $" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="monospace"
                android:layout_gravity="start"
                android:textSize="18dp"
                android:layout_marginRight="5dp"
                android:textColor="@color/deepGrey"
                android:text="500"
                android:maxLength="15"
                android:id="@+id/textview_costoOrden"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="30"
        android:gravity="center_vertical">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_edit_black"
            android:layout_marginHorizontal="5dp"
            android:background="@android:color/transparent"
            android:id="@+id/btn_editarOrden" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_delete_black"
            android:layout_marginHorizontal="5dp"
            android:background="@android:color/transparent"
            android:id="@+id/btn_eliminarOrden" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_pago_on_black_24dp"
            android:layout_marginHorizontal="5dp"
            android:background="@android:color/transparent"
            android:id="@+id/btn_pagarOrden" />

    </LinearLayout>

</LinearLayout>